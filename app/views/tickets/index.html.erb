<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <h4>Tickets</h4>
      </div>
      <div align="right" class="col-md-9">
        <%= link_to "Novo ticket", new_ticket_path, class: "btn btn-default" %> 
      </div>
    </div>
  </div>
</div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Tipo de ticket</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.customer.name %></td>
        <td><%= ticket.ticket_type.name %></td>
        <td><%= ticket.user.email %></td>
        <td><%= link_to 'Ver', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Deletar', ticket, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
