<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3">
        <h4>Clientes</h4>
      </div>
      <div align="right" class="col-md-9">
        <%= link_to "Novo cliente", new_customer_path, class: "btn btn-default" %> 
      </div>
    </div>
  </div>
</div>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td align="right">
          <%= link_to 'Ver', customer, class: 'btn btn-info btn-xs' %>
          <%= link_to 'Editar', edit_customer_path(customer), class: 'btn btn-success btn-xs' %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>